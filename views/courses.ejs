<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Cool School Courses</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body> 
  <nav class="blue-grey darken-4">
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo">Cool School</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a href="/courses">Courses</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </nav>
<div class="container">
  <h1>Cool School Courses</h1>

    <div class="row">
        <div class="col m3"> <b>Name</b> </div>
        <div class="col m3"> <b>Price</b> </div>
        <div class="col m3"> <b>Description</b> </div>
        <div class="col m3"> <b>View</b> </div>
    </div>

 <% courses.forEach ( function ( course ) { %>
        <div class="row">
            <div class="col m3"> <%= course.name %> </div>
            <div class="col m3"> <%= course.price %> </div>
            <div class="col m3"> <%= course.description %> </div>
            <div class="col m3"> <a href="<%= '/courses/'+ course.id %>">View</a> </div>
        </div>
<% }); %>
</div>
</body>
</html>